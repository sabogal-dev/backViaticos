generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Gasto {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  titulo      String
  descripcion String   @db.Text
  fecha       DateTime @db.DateTime(0)
  imagen      String?
  monto       Decimal  @db.Decimal(10, 2)
  
  // Quién pagó el gasto: "vendedor" o "empresa"
  pagadoPor   String   @default("vendedor") @db.VarChar(20)

  // Relación con Categoria
  categoriaId Int
  categoria   Categoria @relation(fields: [categoriaId], references: [id])

  // Relación con usuario
  usuarioId Int
  usuario   Usuario @relation(fields: [usuarioId], references: [id])

  // Relación con Subcategoria
  subcategoriaId Int?
  subcategoria   Subcategoria? @relation(fields: [subcategoriaId], references: [id])

  // Relación con proveedor
  proveedorId Int?
  proveedor   Proveedor? @relation(fields: [proveedorId], references: [id])
}

model Categoria {
  id             Int     @id @default(autoincrement())
  nombre         String  @db.VarChar(50)
  cuentaContable Decimal @db.Decimal(10, 2)

  gastos       Gasto[]
  Subcategoria Subcategoria[]
  proveedores  Proveedor[]
}

model Proveedor {
  id     Int     @id @default(autoincrement())
  nit    Decimal @db.Decimal(15, 0)
  nombre String  @db.VarChar(60)

  gastos     Gasto[]
  categorias Categoria[]
}

model Subcategoria {
  id     Int    @id @default(autoincrement())
  nombre String @db.VarChar(50)

  // Relación con Categoria
  categoriaId Int
  categoria   Categoria @relation(fields: [categoriaId], references: [id])

  gastos Gasto[]
}

model Usuario {
  id     Int    @id @default(autoincrement())
  nombre String @unique
  clave  String
  role   String

  gastos         Gasto[]
  consignaciones Consignacion[]
}

model Consignacion {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  fecha       DateTime @db.DateTime(0)
  monto       Decimal  @db.Decimal(10, 2)
  concepto    String?  @db.Text
  comprobante String?  @db.VarChar(100)
  
  // Relación con usuario
  usuarioId Int
  usuario   Usuario @relation(fields: [usuarioId], references: [id])
}
